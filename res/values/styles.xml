<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <!-- Application theme. -->
    <!--
    <style name="AppBaseTheme" parent="android:Theme.Light.NoTitleBar">
        
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
       
    </style>
    -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.NoActionBar">
        <item name="android:textColor">@color/text_color_brown_light</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:buttonStyle">@style/ButtonApp</item>
        <item name="android:autoCompleteTextViewStyle">@style/AutoCompleteTextViewAppTheme</item>
        <item name="android:editTextStyle">@style/AutoCompleteTextViewAppTheme</item>
    </style>

    <style name="ThemeInput" parent="AppTheme">
        <item name="android:textSize">@dimen/text_size_normal2</item>
    </style>

    <style name="ButtonApp" parent="@android:style/Widget.Button">
        <item name="android:textSize">@dimen/text_size_normal2</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/button</item>
    </style>

    <style name="StyleButtonVariants">
        <item name="android:textSize">@dimen/text_size_normal_extra</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:background">@drawable/bkg_answer</item>
        <item name="android:paddingLeft">@dimen/padding_normal_smaller</item>
        <item name="android:maxHeight">@dimen/max_height_button_answer</item>
        <item name="android:maxWidth">@dimen/max_width_button_answer</item>
    </style>

    <style name="StyleLevel">
        <item name="android:background">@color/transparent_light</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:padding">@dimen/padding_small_extra</item>
        <item name="android:gravity">right</item>
    </style>

    <style name="StyleButtonMain">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">@dimen/text_size_normal_extra</item>
        <item name="android:gravity">center</item>
        <item name="android:maxWidth">@dimen/max_width_btns_main</item>
        <item name="android:maxHeight">@dimen/max_height_btns_main</item>
    </style>

    <style name="AutoCompleteTextViewAppTheme" parent="@android:style/Widget.AutoCompleteTextView">
        <item name="android:background">@drawable/apptheme_edit_text_holo_light</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textColorHint">@color/text_color_brown_light</item>
    </style>

    <style name="ThemeDialog" parent="@android:style/Theme.Holo.Light.Dialog.NoActionBar">
        <item name="android:textColor">@color/text_color_brown_light</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColorHint">@color/text_color</item>
    </style>

    <style name="StyleBtnOk" parent="ButtonApp">
        <item name="android:paddingLeft">@dimen/padding_normal</item>
        <item name="android:background">@drawable/button_ok</item>
    </style>
    
        <style name="StyleBtnCancel" parent="StyleBtnOk">
        <item name="android:background">@drawable/button_cancel</item>
    </style>
