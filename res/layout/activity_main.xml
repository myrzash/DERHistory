<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bkg"
    android:padding="@dimen/padding_normal" >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/padding_normal"
        android:background="@drawable/bkg_title"
        android:gravity="center"
        android:textSize="@dimen/text_size_high" />

    <ImageView
        android:id="@+id/imageCategories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/category" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageCategories"
        android:layout_alignLeft="@+id/imageCategories"
        android:layout_alignRight="@+id/imageCategories"
        android:layout_alignTop="@+id/imageCategories" >

        <Button
            android:id="@+id/btn1"
            style="@style/StyleButtonMain"
            android:layout_width="@dimen/max_width_btns_main"
            android:layout_height="@dimen/max_height_btns_main"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/padding_normal"
            android:textColor="@color/title_ancient" />

        <Button
            android:id="@+id/btn5"
            style="@style/StyleButtonMain"
            android:layout_width="@dimen/max_width_btns_main"
            android:layout_height="@dimen/max_height_btns_main"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="140dp"
            android:textColor="@color/title_independensy" />

        <Button
            android:id="@+id/btn4"
            style="@style/StyleButtonMain"
            android:layout_width="@dimen/max_width_btns_main"
            android:layout_height="@dimen/max_height_btns_main"
            android:layout_alignLeft="@+id/btn5"
            android:layout_below="@+id/btn5"
            android:layout_marginLeft="114dp"
            android:layout_marginTop="22dp"
            android:textColor="@color/title_xx_century" />

        <Button
            android:id="@+id/btn3"
            style="@style/StyleButtonMain"
            android:layout_width="@dimen/max_width_btns_main"
            android:layout_height="@dimen/max_height_btns_main"
            android:layout_alignBaseline="@+id/btn4"
            android:layout_alignBottom="@+id/btn4"
            android:layout_marginLeft="114dp"
            android:layout_toRightOf="@+id/btn4"
            android:textColor="@color/title_khanate" />

        <Button
            android:id="@+id/btn2"
            style="@style/StyleButtonMain"
            android:layout_width="@dimen/max_width_btns_main"
            android:layout_height="@dimen/max_height_btns_main"
            android:layout_alignBaseline="@+id/btn5"
            android:layout_alignBottom="@+id/btn5"
            android:layout_alignLeft="@+id/btn3"
            android:layout_marginLeft="83dp"
            android:textColor="@color/title_medieval" />

        <Button
            android:id="@+id/btnStart"
            style="@style/StyleButtonMain"
            android:layout_width="@dimen/max_width_btn_start"
            android:layout_height="@dimen/max_height_btn_start"
            android:layout_above="@+id/btn3"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/imageScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_score" />

    <ImageView
        android:id="@+id/imageLogOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:src="@drawable/menu_logout" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_edit" />

        <CheckBox
            android:id="@+id/checkBoxSound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_normal"
            android:alpha="0.8"
            android:button="@drawable/icon_sound" />
    </LinearLayout>

</RelativeLayout>